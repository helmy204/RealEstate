@model RealEstate.Rentals.PostRental

@{
    ViewBag.Title = "Post";
}

<h2>Post Rentals</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumberOfRooms, new { @class = "control-" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumberOfRooms)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Price, new { @class = "control-" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Price)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Address, new { @class="control-"})
            <div class="col-md-10">
                @Html.TextAreaFor(model=>model.Address)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Post" class="btn btn-default" />
            </div>
        </div>
    </div>
}